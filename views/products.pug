html 
   head 
   title="Documento" 
       link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous") 
   body(class="d-flex justify-content-center align-items-center",style="height: 100vh;") 
       div(class="d-flex flex-column") 
       div(class="mb-4")
          a(class="btn btn-info text-white",href="http://localhost:8080/")="Volver al formulario" 
       div 
         table(class="table table-dark table-bordered") 
            thead 
              tr 
                  th(class="text-center", scope="col")="Nombre" 
                  th(class="text-center", scope="col")="Precio" 
                  th(class="text-center", scope="col")="Imagen" 
       tbody 
           for item in productos 
              tr 
                  td(class="text-center")=item.title 
                  td(class="text-center")=item.price 
                  td(class="text-center") 
                  img(class="img-thumbnail", style="width: 40px; height: 40px;", src=item.thumbnail, alt=item.title) 
